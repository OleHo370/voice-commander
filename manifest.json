{
 "manifest_version": 3,
 "name": "Lumen",
 "version": "1.0",
 "description": "Control your browser with voice commands",
 "permissions": [
   "offscreen",
   "sidePanel",
   "tabs",
   "storage",
   "scripting"
 ],
 "host_permissions": [
   "<all_urls>"
 ],
 "background": {
   "service_worker": "dist/background.js",
   "type": "module"
 },
 "side_panel": {
   "default_path": "popup.html"
 },
 "options_page": "options.html",
 "content_scripts": [
   {
     "matches": ["<all_urls>"],
     "js": ["dist/content.js", "dist/modifypage.js"]
   }
 ],
 "web_accessible_resources": [
   {
     "resources": ["audio/sound.mp3", "html/offscreen.html", "js/offscreen.js"],
     "matches": ["<all_urls>"]
   }
 ]
}